import java.util.*;

public class Main {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("Decimal\t Hex \t Binary");
		System.out.println("-------\t------\t-----");
		
			int fromBase = in.nextInt(), toBase = in.nextInt();
			String number = in.nextLine().trim();
			System.out.println("\nAnswer: " + Integer.toString(Integer.parseInt(number, fromBase), toBase));			
	}
	
}
